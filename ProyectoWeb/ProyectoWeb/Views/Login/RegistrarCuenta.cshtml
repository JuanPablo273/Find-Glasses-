@model ProyectoWeb.Entities.UsuarioEnt
@{
    ViewData["Title"] = "RegistrarCuenta";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <h1>FindGlasses</h1>
                </div>
                @using (Html.BeginForm("RegistrarCuenta", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.identificacion, new { @onkeyup = "ConsultarNombre()", @class = "form-control form-control-lg", @type = "text", @placeholder = "Identificación", @data_val = "true", @data_val_required = "El campo Identificación es requerido" })
                        @Html.ValidationMessageFor(m => m.identificacion, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.nombre, new { @readOnly = "readOnly", @style = "background-color:#eeeeee", @class = "form-control form-control-lg", @type = "text", @placeholder = "Nombre Completo", @data_val = "true", @data_val_required = "El campo Nombre Completo es requerido" })
                        @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.usuario, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Nombre de Usuario", @data_val = "true", @data_val_required = "El campo Nombre de Usuario es requerido" })
                        @Html.ValidationMessageFor(m => m.usuario, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.correo, new { @class = "form-control form-control-lg", @type = "email", @placeholder = "Correo Electrónico", @data_val = "true", @data_val_required = "El campo Correo Electrónico es requerido" })
                        @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.contrasenna, new { @class = "form-control form-control-lg", @type = "password", @placeholder = "Contraseña", @data_val = "true", @data_val_required = "El campo Contraseña es requerido" })
                        @Html.ValidationMessageFor(m => m.contrasenna, "", new { @class = "text-danger" })
                    </div>


                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="REGISTRARSE">
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Login")" class="text-primary">Iniciar Sesión</a><br />
                        <a href="@Url.Action("IniciarSesion", "Login")" color: black;>Volver</a><br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/js/consultanombreapi.js"></script>